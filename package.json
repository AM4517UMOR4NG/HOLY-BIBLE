{
  "name": "holy-bible-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc -p tsconfig.json && npm run build:frontend && npm run copy:frontend",
    "build:frontend": "cd frontend && npm run build",
    "copy:frontend": "node -e \"const fs=require('fs');const path=require('path');if(fs.existsSync('public'))fs.rmSync('public',{recursive:true});fs.cpSync('frontend/dist','public',{recursive:true})\"",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "seed:sample": "ts-node scripts/seed/seed.ts scripts/seed/sample.json"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/multipart": "^8.3.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@prisma/client": "^5.19.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.9.0",
    "fastify": "^4.27.2",
    "fastify-plugin": "^5.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "meilisearch": "^0.41.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^9.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@vercel/node": "^3.0.0",
    "eslint": "^8.57.0",
    "prisma": "^5.19.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  }
}
